#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/../../../../../hogan.js@3.0.2/node_modules"
else
  export NODE_PATH="$NODE_PATH:$basedir/../../../../../hogan.js@3.0.2/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../hogan.js@3.0.2/node_modules/hogan.js/bin/hulk" "$@"
else
  exec node  "$basedir/../../../../../hogan.js@3.0.2/node_modules/hogan.js/bin/hulk" "$@"
fi
